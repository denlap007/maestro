{
  "$schema": "http://json-schema.org/schema#",
  "title": "Web_app_schema",
  "description": "This is a schema that describes the structure of a web app",
  "_commnet": "syntax of json schema validated on: jsonlint.com ",
  "definitions": {
    "container": {
      "type": "object",
      "properties": {
        "container_type": {
          "type": "object",
          "anyOf": [
            {
              "$ref": "#/definitions/data"
            },
            {
              "$ref": "#/definitions/web"
            },
            {
              "$ref": "#/definitions/Business"
            }
          ]
        },
        "container_name": {
          "type": "string"
        },
        "connect_with": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "type": "string"
          }
        },
        "conf_files_paths": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "ports": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/port"
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "container_name",
        "container_type"
      ]
    },
    "data": {
      "title": "Data Container type",
      "description": "This schema matches a data container type",
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "data"
          ]
        },
        "db_port": {
          "$ref": "#/definitions/port"
        },
        "db_url": {
          "type": "string",
          "format": "String"
        },
        "db_name": {
          "type": "string"
        },
        "db_username": {
          "type": "string"
        },
        "db_password": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "db_port",
        "db_url",
        "db_username",
        "db_password",
        "db_name",
        "type"
      ]
    },
    "web": {
      "title": "Web Container type",
      "description": "This schema matches a web container type",
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "web"
          ]
        },
        "url": {
          "type": "string",
          "format": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "type",
        "url"
      ]
    },
    "port": {
      "type": "integer",
      "minimum": 1024,
      "maximum": 65535,
      "exclusiveMaximum": true,
      "exclusiveMinimum": true
    },
    "business": {
      "title": "Business Container type",
      "description": "This schema matches a Business container type",
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "Business"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "type"
      ]
    }
  },
  "type": "array",
  "items": {
    "allOf": [
      {
        "$ref": "#/definitions/container"
      }
    ]
  },
  "minItems": 2,
  "plurality": {
    "type": "integer"
  }
}