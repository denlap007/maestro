<webApp>
    <containers>
        <webContainer>
            <name>web</name>
            <connectWith>data </connectWith>
            <dockerImage>java</dockerImage>
            <entrypointPath></entrypointPath>
            <entrypointArgs></entrypointArgs>
            <environment>
                <host_url>localhost:4848</host_url>
                <host_port>4848</host_port>
            </environment>
        </webContainer>

        <businessContainer>
            <name>business1</name>
            <connectWith>web data</connectWith>
            <dockerImage>ubuntu</dockerImage>
            <entrypointPath></entrypointPath>
            <entrypointArgs></entrypointArgs>
            <environment>
                <host_url>http://something.com</host_url>
                <host_port>8080</host_port>
            </environment>
        </businessContainer>
        <businessContainer>
            <name>business2</name>
            <connectWith>web data</connectWith>
            <dockerImage>ubuntu</dockerImage>
            <entrypointPath></entrypointPath>
            <entrypointArgs></entrypointArgs>
            <environment>
                <host_url>http://something.com</host_url>
                <host_port>8080</host_port>
            </environment>
        </businessContainer>

        <dataContainer>
            <name>data</name>
            <connectWith>web</connectWith>
            <dockerImage>dio/mysql_jre:v2</dockerImage>
            <entrypointPath>/broker/data-entrypoint.sh</entrypointPath>
            <entrypointArgs>mysqld</entrypointArgs>
            <environment>
                <host_url>jdbc:mysql://localhost:3306/test?profileSQL=true</host_url>
                <db_port>3306</db_port>
                <db_user>root</db_user>
                <db_pass>root</db_pass>
                <db_name></db_name>
                <db_driver></db_driver>
            </environment>
        </dataContainer>


    </containers>

    <containersNum>2</containersNum>

    <webAppName>TestWebApp</webAppName>
</webApp>